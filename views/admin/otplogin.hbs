<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div id="first">
        <div class="myform form ">
          <div class="logo mb-3">
            <form action="/admin/otpverify" method="post" id="otpform">
              <div class="form-group">
                {{#if otpCheck}}
                <div class="text-danger">wrong otp</div>
                {{/if}}
                <label for="exampleInputEmail1">Enter The OTP</label>
                <input type="text" name="mobile" id="mobile" value="{{mobile}}" class="invisible">
                <input type="text" name="otp" id="otp" class="form-control" aria-describedby="emailHelp" placeholder="">
              </div>
              <div class="col-md-12 text-center ">
                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm mt-4 mb-2">Get OTP</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    $(document).ready(function () {
      $("#otpform").validate({
        rules: {
          otp: {
            required: true,
            number: true,
            minlength: 6,
            maxlength: 6
          }
        }
      })
    })
  </script>
